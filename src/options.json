{
  "type": "object",
  "properties": {
    "config": {
      "description": "should be {Object} (https://github.com/postcss/postcss-loader#config)",
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "path": {
              "description": "should be {String} (https://github.com/postcss/postcss-loader#path)",
              "type": "string"
            },
            "ctx": {
              "description": "should be {Object} (https://github.com/postcss/postcss-loader#context-ctx)",
              "type": "object"
            }
          },
          "additionalProperties": false
        },
        {
          "description": "Allows to specify the path to the configuration file",
          "type": "string"
        },
        {
          "description": "Enables/Disables autoloading config",
          "type": "boolean"
        }
      ]
    },
    "exec": {
      "description": "should be {Boolean} (https://github.com/postcss/postcss-loader#exec)",
      "type": "boolean"
    },
    "parser": {
      "description": "should be {String|Object} (https://github.com/postcss/postcss-loader#parser)",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object"
        }
      ]
    },
    "syntax": {
      "description": "should be {String|Object} (https://github.com/postcss/postcss-loader#syntax)",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object"
        }
      ]
    },
    "stringifier": {
      "description": "should be {String|Object} (https://github.com/postcss/postcss-loader#stringifier)",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object"
        }
      ]
    },
    "plugins": {
      "description": "should be {Array|Object|Function} (https://github.com/postcss/postcss-loader#plugins)",
      "anyOf": [
        { "type": "array" },
        { "type": "object" },
        { "instanceof": "Function" }
      ]
    },
    "sourceMap": {
      "description": "should be {String|Boolean} (https://github.com/postcss/postcss-loader#sourcemap)",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "boolean"
        }
      ]
    }
  },
  "additionalProperties": true
}
